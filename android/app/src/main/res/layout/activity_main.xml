<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:background="@color/red">

            <TextView
                android:id="@+id/score_red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="150sp"
                android:textColor="@color/black">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/btn_red_plus_score"
                    android:background="@drawable/ripple_round_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/plus"
                    android:textSize="50sp"
                    android:textColor="@color/black">
                </Button>

                <Button
                    android:id="@+id/btn_red_minus_score"
                    android:background="@drawable/ripple_round_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/minus"
                    android:textSize="50sp"
                    android:textColor="@color/black">
                </Button>

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/blue">
            <TextView
                android:id="@+id/score_blue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textSize="150sp"
                android:textColor="@color/black">
            </TextView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true">

                <Button
                    android:id="@+id/btn_blue_plus_score"
                    android:background="@drawable/ripple_round_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/plus"
                    android:textSize="50sp"
                    android:textColor="@color/black">
                </Button>

                <Button
                    android:id="@+id/btn_blue_minus_score"
                    android:background="@drawable/ripple_round_button"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="@string/minus"
                    android:textSize="50sp"
                    android:textColor="@color/black">
                </Button>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>